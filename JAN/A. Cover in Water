#include<bits/stdc++.h>
using namespace std;
 
 
int main(){
    ios::sync_with_stdio(false);
    cin.tie (nullptr);
 
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        string s;
        cin>>s;
        
        int totalDots = 0;
        int maxSeg = 0;
        for(int i = 0;i<n;){
            if(s[i]== '#'){
            i++;
            continue;
            
        }
         int j =i;
         while(j<n &&s[j] == '.')
             j++;
         int len = j-i;
         totalDots += len;
         maxSeg = max(maxSeg , len);
         i= j;
        }
        if(totalDots == 0)
        cout<<0<<"\n";
        else if(maxSeg>=3)
        cout<<2<<"\n";
       
         else
       cout<<totalDots<<"\n";
         
    }
    return 0;
}